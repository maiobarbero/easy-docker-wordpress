#!/bin/bash
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
END='\033[0m'
echo "${GREEN}1/ Downloading and extracting WordPress...${END}"
bin/wordpress-download

echo "${GREEN}2/ Installing WordPress...${END}"
bin/wordpress-install

echo "${GREEN}3/ Generating wp-config.php${END}"
bin/wordpress-config

echo "${GREEN}4/ Setting up custom domanin and genrating SSL${END}"
bin/setup-domain "${DOMAIN}"

echo "${YELLOW}Docker development environment setup complete.${END}"
echo "${YELLOW}You may now access your WordPress website at https://${DOMAIN}/${END}"